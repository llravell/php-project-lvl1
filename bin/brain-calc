#!/usr/bin/env php
<?php

use function Hexlet\Code\Engine\startGame;
use function Hexlet\Code\CalcGame\generateCalcQuestion;
use const Hexlet\Code\CalcGame\CALC_GAME_RULES;

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

$generateQuestion = function () {
    return generateCalcQuestion();
};

startGame(CALC_GAME_RULES, $generateQuestion);
